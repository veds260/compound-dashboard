# Database - Railway will provide this automatically when you add PostgreSQL
DATABASE_URL="postgresql://username:password@host:port/database"

# NextAuth - Update with your Railway domain after deployment
NEXTAUTH_URL="https://your-app-name.railway.app"
NEXTAUTH_SECRET="generate-a-secure-random-string-32-chars"

# App Settings
NODE_ENV="production"

# Admin Credentials - Change these for production security
ADMIN_EMAIL="admin@your-domain.com"
ADMIN_PASSWORD="your-secure-password-change-this"
ADMIN_NAME="Super Admin"

# IMPORTANT: Copy these to Railway environment variables
# Railway Dashboard → Your Project → Variables tab → Add each variable